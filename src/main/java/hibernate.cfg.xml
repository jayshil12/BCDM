<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory name="">
  <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
  <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
  <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/myapp</property>
  <property name="hibernate.connection.username">postgres</property>
  <property name="hibernate.connection.password">1234</property>
  <property name="hibernate.show_sql">false</property>
  <mapping class="mypackage.model.User" package="mypackage.model"/>
  <mapping class="mypackage.model.Fooditem" package="mypackage.model"/>
  <mapping class="mypackage.model.Category" package="mypackage.model"/>
 </session-factory>
</hibernate-configuration>
